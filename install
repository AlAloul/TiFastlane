#!/usr/bin/env node

/*jslint node: true */
'use strict';

var path = require('path'),
    exec = require('./lib/exec');

console.log('--- Installing fastlane.tools ---');

exec('ruby', ['-v'], null, function(e) {

	console.log('--- Working on FastLane Tools ---');

	exec('sudo', ['gem','install', 'fastlane'], null, function(e) {

		console.log('--- All Tools Downloaded ---');

	});

});
